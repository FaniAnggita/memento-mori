							"});\r",
							"\r",
							"var responseJSON = pm.response.json();\r",
							"\r",
							"pm.test(\"Object contains required fields id, code, district_code, name, and meta\", function () {\r",
							"  pm.expect(responseJSON).to.have.property('id');\r",
							"  pm.expect(responseJSON).to.have.property('code');\r",
							"  pm.expect(responseJSON).to.have.property('district_code');\r",
							"  pm.expect(responseJSON).to.have.property('name');\r",
							"  pm.expect(responseJSON).to.have.property('meta');\r",
							"});\r",
							"\r",
							"pm.test(\"Response must single object\", function () {\r",
							"    var responseJSON = pm.response.json();\r",
							"    var idCount = Object.keys(responseJSON).filter(key => key === 'id').length;\r",
							"    pm.expect(idCount).to.equal(1, \"Response should include exactly one ID\");\r",
							"});"
						],
